<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <gradient
                android:type="linear"
                android:startColor="@color/black_transparent"
                android:centerColor="@color/black_transparent"
                android:endColor="@color/gris_transparent"
                android:centerY="0.0"

                />
            <corners android:radius="40dp"/>
            <padding android:bottom="1dp" android:right="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
</layer-list>