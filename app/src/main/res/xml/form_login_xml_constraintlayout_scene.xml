<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2600"
        motion:motionInterpolator="cubic(1,0,0.22,1)"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/contentLoginCV"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/contentLoginCV"
               motion:framePosition="40"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/contentLoginCV"
               motion:framePosition="70"
               android:alpha="1" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/contentLoginCV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toTopOf="@+id/guiaCentralGL"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="100dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_width="@dimen/with_form_login" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/contentLoginCV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/with_form_login"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/guiaCentralGL"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp" />
        <Constraint
            android:id="@+id/guiaCentralGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintGuide_end="@dimen/height_form_login" />
        <Constraint
            android:id="@+id/guiaCentralGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintGuide_end="@dimen/height_form_login" />
    </ConstraintSet>
</MotionScene>