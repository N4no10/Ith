<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activities.main.fragments.informe.InformePedidoFragment">


    <data>

        <variable
            name="datosPedido"
            type="cu.gob.ith.domain.model.DatosPedido" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_light2"
        app:layoutDescription="@xml/fragment_informe_pedido_xml_constraintlayout2_scene">

        <include
            android:id="@+id/detalleSolicitudPedidoLayout"
            layout="@layout/detalle_solicitud_pedido"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            binding:datosPedido='@{datosPedido}' />


        <include
            android:id="@+id/listProductosLayout"
            layout="@layout/list_productos_pedido_solicitud"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="73dp" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>