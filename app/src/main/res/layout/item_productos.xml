<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="producto"
            type="cu.gob.ith.domain.model.Producto" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentCV"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/background_item_producto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/myriad_regular"
                android:text='@{producto.producto}'
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/fotoIV2"
            android:layout_width="64dp"
            android:layout_height="70dp"
            android:rotation="0"
            app:elevation="50dp"
            android:src="@drawable/foto_alimentos"
            app:layout_constraintBottom_toBottomOf="@+id/contentCV"
            app:layout_constraintEnd_toStartOf="@+id/contentCV"
            app:layout_constraintStart_toStartOf="@+id/contentCV"
            app:layout_constraintTop_toTopOf="@+id/contentCV"
            app:srcCompat="@drawable/foto_alimentos" />

        <include
            android:id="@+id/buttonAddLayout"
            layout="@layout/buttton_item_producto"
             android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/contentCV"
            app:layout_constraintEnd_toEndOf="@+id/contentCV"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="@+id/contentCV"
            app:layout_constraintTop_toBottomOf="@+id/contentCV" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
