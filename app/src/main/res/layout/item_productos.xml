            <View
                android:id="@+id/viewSeparetorV"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/gris_light2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/totalPagarTitlePriceLL"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/productTitlePriceLL"
                app:layout_constraintTop_toTopOf="@+id/productTitlePriceLL" />


