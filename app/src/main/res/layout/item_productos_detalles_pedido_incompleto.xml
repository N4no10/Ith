<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="producto"
            type="cu.gob.ith.domain.model.Producto" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentCV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:background="@drawable/background_item_producto"
            android:paddingBottom="16dp"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/myriad_regular"
                android:text="@{producto.descripcion}"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Producto de prueba para ver el texto como queda aqui en este campo"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16000003"
                app:layout_constraintVertical_chainStyle="packed" />

            <LinearLayout
                android:id="@+id/productTitlePriceLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/viewSeparetorOneV"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/titleTV"
                app:layout_constraintTop_toBottomOf="@id/titleTV">

                <TextView
                    android:id="@+id/productTitlePriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriad_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/precio_title"
                    android:textColor="@color/blue_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/myriad_regular"
                    android:gravity="center"
                    android:text='@{producto.pv+"/"+producto.codUm}'
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewSeparetorOneV"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/gris_light3"
                app:layout_constraintEnd_toStartOf="@id/cantidadTitlePriceLL"
                app:layout_constraintStart_toEndOf="@+id/productTitlePriceLL"
                app:layout_constraintTop_toTopOf="@+id/productTitlePriceLL" />

            <LinearLayout
                android:id="@+id/cantidadTitlePriceLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/viewSeparetorTwoV"
                app:layout_constraintStart_toEndOf="@+id/viewSeparetorOneV"
                app:layout_constraintTop_toTopOf="@+id/productTitlePriceLL">


                <TextView
                    android:id="@+id/cantidadTitlePriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriad_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/productos_cant_necesaria"
                    android:textColor="@color/blue_dark"
                    android:textSize="12sp"
                    tools:text="Cant. Necesaria" />

                <TextView
                    android:id="@+id/cantidadTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/myriad_regular"
                    android:gravity="center"
                    android:text='@{producto.cantNecesaria}'
                    android:textColor="@color/black"
                    tools:text="12"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewSeparetorTwoV"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/gris_light2"
                app:layout_constraintStart_toEndOf="@+id/cantidadTitlePriceLL"
                app:layout_constraintEnd_toStartOf="@id/totalPagarTitlePriceLL"
                app:layout_constraintTop_toTopOf="@+id/productTitlePriceLL" />

            <LinearLayout
                android:id="@+id/totalPagarTitlePriceLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewSeparetorTwoV"
                app:layout_constraintTop_toTopOf="@+id/productTitlePriceLL">

                <TextView
                    android:id="@+id/totalPagarTitlePriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/myriad_bold"
                    android:text="@string/productos_importe"
                    android:textColor="@color/blue_dark"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/totalPagarPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/myriad_regular"
                    android:gravity="center"
                    android:text='@{""+producto.importe}'
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="1234"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/fotoIV2"
            android:layout_width="64dp"
            android:layout_height="70dp"
            android:rotation="0"
            android:src="@drawable/foto_alimentos"
            app:elevation="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/contentCV"
            app:layout_constraintEnd_toStartOf="@+id/contentCV"
            app:layout_constraintStart_toStartOf="@+id/contentCV"
            app:layout_constraintTop_toTopOf="@+id/contentCV"
            app:layout_constraintVertical_bias="0.25"
            app:srcCompat="@drawable/foto_alimentos" />


    </androidx.constraintlayout.widget.ConstraintLayout>

